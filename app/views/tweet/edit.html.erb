<div class="main tweets-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/tweet/#{@tweet.id}/update") do %>
     <div class="form">
       <div class="form-body">
         <% @tweet.errors.full_messages.each do |message| %>
         <div class="form-error">
           <%= message %>
         </div>
         <% end %>

          <textarea name="content"><%= @tweet.content %></textarea>
          <input type="submit" value="保存">
        <% end %>
      </div>
    </div>
  </div>

</div>
